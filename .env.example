## SERVER ##
APPLICATION_NAME="API Gateway - Development"
NODE_ENV="DEVELOPMENT"
HOST="0.0.0.0"
PORT=3001

## OAuth2 ##
SUPPORTED_SCOPES=["sales_sync", "procurement", "release_notes"]

## Throttler ##
THROTTLE_TTL= 60000
THROTTLE_LIMIT= 400000


## PostgreSQL DB (training lab)
# These values are used both by the Postgres container and by the
# NestJS API gateway TypeORM connection.
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=api_gateway
DB_PASSWORD=api_gateway
DB_DATABASE=api_gateway

## RabbitMQ Docker Defaults ##
RABBITMQ_DEFAULT_USER=api-gateway
RABBITMQ_DEFAULT_PASS=api-gateway
RABBITMQ_DEFAULT_VHOST=/crm


## RabbitMQ Client ##
RABBITMQ_HOSTS=["localhost"]
RABBITMQ_PORT=5672
RABBITMQ_SECURE=false

## RabbitMQ Credentials ##
# PLAIN authentication is only possible when not using TLS so secure should be false
RABBITMQ_USERNAME=api-gateway
RABBITMQ_PASSWORD=api-gateway
RABBITMQ_VHOST=/crm
## RabbitMQ Options ##
RABBITMQ_CRM_SALES_EXCHANGE=sales-orders
RABBITMQ_CRM_SALES_ROUTING_KEY=sync

## JWT Auth ##
JWT_SECRET=local-secret-change-me
JWT_ISSUER=api-gateway
JWT_AUDIENCE=api-gateway-clients
JWT_EXPIRES_IN=1h
PASSWORD_SALT=training-lab-salt-change-me

